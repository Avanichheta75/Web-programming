<div class="add-post">
    <h1>What's on your mind?</h1>
    <div id="errorDiv">
    </div>
    <form id="addPostForm">
        <label>Post Text
            <br />
            <textarea id="addPostText" placeholder="Your text here"></textarea>
        </label>
        <br />
        <label>Recipe (Optional)
            <br />
            <select id="addPostRecipe" class="form-control">
                <option value="None">None</option>
                {{#each allRecipes}}
                <option value="{{this.[1]}}">{{this.[0]}}</option>
                {{/each}}
            </select>
        </label>
        <br />
        <input type="submit" value="Add Post" class="btn btn-primary mb-2" />
    </form>
    <div id="successDiv" hidden></div>
</div>